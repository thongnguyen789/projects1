<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>@ViewData["title"] - Cửa hàng bán máy in - Thiết bị in Chính hãng</title>

    <!-- Bootstrap icons-->
    <link href="~/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Template/css/styles.css" rel="stylesheet" />
    <link href="~/Template/css/Bmayin.css" rel="stylesheet" />
    <script src="~/Template/js/scripts.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body id="top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-success shadow pd1">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><i class="bi bi-shop-window"></i> Cửa hàng bán máy in</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link active" asp-controller="Home" asp-action="Gioithieu">Giới thiệu</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle active" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Danh mục</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @if (ViewBag.danhmuc != null)
                            {
                                @foreach (var i in (List<Danhmuc>)ViewBag.danhmuc)
                                {
                                    <li><a class="dropdown-item" asp-action="DanhmucSP" asp-route-id="@i.MaDm">@i.Ten</a></li>
                                }
                            }
                        </ul>
                    </li>
                    <li class="d-flex flex-row priven">
                        <form asp-controller="Home" asp-action="Search">
                            <input type="search" name="SearchKey" placeholder="Tìm kiếm...." class="form-control" />
                        </form>
                    </li>
                </ul>
                <div class="d-flex">
                    <a asp-action="ViewCart" class="btn btn-outline-light"><i class="bi bi-cart3"></i> Giỏ hàng <span class="badge bg-danger text-white ms-1 rounded-pill">@ViewData["solg"]</span></a>
                    &nbsp;
                    @if (ViewBag.khachhang != null)
                    {
                        <a asp-action="Customer" class="btn btn-outline-light"><i class="bi bi-person"></i> @ViewBag.khachhang.Ten</a> }
                    else
                    {
                        @if (ViewBag.Nhanvien != null)
                        {
                            <a asp-controller="Mathangs" asp-action="Index" class="btn btn-outline-light"><i class="bi bi-person"></i> @ViewBag.nhanvien.Ten</a> }
                        else
                        {
                            <a asp-action="Login" class="btn btn-outline-light"><i class="bi bi-person"></i> Đăng nhập</a>
                        }
                    }
                </div>
            </div>
        </div>
    </nav>
    <!-- Section-->
    <section>
        <div class="container">
            @RenderBody()
        </div>
    </section>

    <button onclick="topFunction()" id="myBtn" title="Go to top">
        <i class="fas fa-angle-up"></i>
    </button>
    <script>
        let mybutton = document.getElementById("myBtn");

        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }

        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>

    <!-- Footer-->
    <footer class="heading1 bg-info">
        <div class="container footer-1">
            <div class="row">
                <div class="col-6 text-light">
                    <h4>
                        <span class="badge text-white bg-success">Cửa</span>
                        <span class="badge text-white bg-warning">Hàng</span>
                        <span class="badge text-white bg-danger">Máy</span>
                        <span class="badge text-white bg-primary">In</span>
                    </h4>
                    <p>
                        <b><i class="fas fa-solid fa-location-dot">Địa chỉ:</i></b> 18 Ung Văn Khiêm, phường Đông Xuyên, TP Long Xuyên, An Giang<br>
                        <b><i class="fas fa-solid fa-phone">Điện thoại:</i></b> 076 3841190<br>
                        <b><i class="fas fa-solid fa-envelope">Email:</i></b> abc123@email.com
                    </p>
                </div>
                <div class="col-3 text-white">
                    <h4>ƯU ĐÃI</h4>
                    <a href="Phieuquatang#" class="list-group-item">Phiếu quà tặng</a>
                    <a href="Khuyenmaidacbiet#" class="list-group-item">Khuyến mãi đặc biệt</a>
                    <a href="Sanseothuonghieu#" class="list-group-item">Săn seo thương hiệu</a>
                </div>
                <div class="col-3 text-white">
                    <h4>DỊCH VỤ KHÁCH HÀNG</h4>
                    <a href="Huongdanmuahang#" class="list-group-item">Hướng dẫn mua hàng</a>
                    <a href="Cauhoithuonggap#" class="list-group-item">Câu hỏi thường gặp</a>
                    <a href="Lienhevoichungtoi#" class="list-group-item">Liên hệ với chúng tôi</a>
                </div>
            </div>
            <hr>
        </div>
        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="m-0 text-center text-white fw-bolder">Copyright &copy; Website 2024 - Dịch vụ phần mềm An Giang</p>
                        </div>
                        <div class="col-md-6 d-flex justify-content-end align-items-center">
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item"><img src="~/Template/Picture/visa-curved-32px.png" alt="Visa"></li>
                                <li class="list-inline-item"><img src="~/Template/Picture/paypal-curved-32px.png" alt="PayPal"></li>
                                <li class="list-inline-item"><img src="~/Template/Picture/discover-curved-32px.png" alt="Discover"></li>
                                <li class="list-inline-item"><img src="~/Template/Picture/maestro-curved-32px.png" alt="Maestro"></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>




</body>
</html>