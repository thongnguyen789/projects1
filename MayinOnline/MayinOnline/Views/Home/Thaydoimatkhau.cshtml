@model IEnumerable<MayinOnline.Models.Mathang>


@{
    ViewData["Title"] = "Thay Đổi Mật Khẩu";
}

<div class="row pd4 pb5">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title text-center">THAY ĐỔI MẬT KHẨU</h5>
            </div>
            <div class="card-body">
                <form asp-action="Customer" method="post">
                    <div class="form-group">
                        <label for="CurrentPassword">Mật Khẩu Hiện Tại</label>
                        <input type="password" class="form-control" id="CurrentPassword" name="CurrentPassword" required>
                    </div>
                    <div class="form-group">
                        <label for="NewPassword">Mật Khẩu Mới</label>
                        <input type="password" class="form-control" id="NewPassword" name="NewPassword" required>
                    </div>
                    <div class="form-group">
                        <label for="ConfirmPassword">Xác Nhận Mật Khẩu Mới</label>
                        <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block" onclick="showAlert();">Lưu Mật Khẩu</button>
                    <a asp-controller="Home" asp-action="Customer" class="btn btn-secondary btn-block">Quay lại</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>

<script>
    function showAlert() {
        alert("Lưu mật khẩu thành công!");
    }
</script>