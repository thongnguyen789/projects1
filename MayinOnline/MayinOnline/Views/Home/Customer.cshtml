@{
    ViewData["Title"] = "Thông Tin Khách Hàng";
}


<h2 class="text-center text-primary pt2"> Thông tin khách hàng </h2>
<br />
<br />
<div class="d-flex justify-content-between">
    <a asp-action="Thaydoimatkhau" class="btn btn-outline-primary ms-2"><i class="bi bi-pencil"></i> Thay đổi mật khẩu</a>
    <div class="text-end">
        <a asp-action="xemcthdKhachhang" asp-route-id="@ViewBag.khachhang.MaKh" class="btn btn-outline-danger"><i class="bi bi-cart3"></i> Lịch sử mua hàng <span class="badge bg-danger text-white ms-1 rounded-pill"></span></a>
    </div>
</div>
<div class="pb5">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <p>Tên Khách Hàng</p>
        </dt>
        <dd class="col-sm-10">
            @ViewBag.khachhang.Ten
        </dd>
        <dt class="col-sm-2">
            <p>Số Điện Thoại</p>
        </dt>
        <dd class="col-sm-10">
            @ViewBag.khachhang.DienThoai
        </dd>
        <dt class="col-sm-2">
            <p>Email</p>
        </dt>
        <dd class="col-sm-10">
            @ViewBag.khachhang.Email
        </dd>
    </dl>
    <a class="btn btn-danger" asp-action="Signout">Đăng Xuất</a>
</div>

