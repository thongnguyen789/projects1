@model MayinOnline.Models.Mathang

@{
    ViewData["Title"] = "Delete";
}

<h1 class="publid">Delete</h1>

<h3>Bạn có chắc chắn muốn xóa mặt hàng này?</h3>
<div>
    <h4>Mặt hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class="col-sm-2">
            Giá Góc
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GiaGoc)
        </dd>
        <dt class="col-sm-2">
            Giá Bán
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GiaBan)
        </dd>
        <dt class="col-sm-2">
            Số Lượng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        <dt class="col-sm-2">
            Mô Tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class="col-sm-2">
            Hình Ảnh
        </dt>
        <dd class="col-sm-10">
            <img src="~/Template/Picture/@Html.DisplayFor(model => model.HinhAnh)" width="400" />
        </dd>
        <dt class="col-sm-2">
            Lượt Xem
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LuotXem)
        </dd>
        <dt class="col-sm-2">
            Lượt Mua
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LuotMua)
        </dd>
        <dt class="col-sm-2">
            Mã Danh Mục
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaDmNavigation.Ten)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaMh" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>
