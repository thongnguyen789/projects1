@model MayinOnline.Models.Mathang

@{
    ViewData["Title"] = "Details";
}

<h1 class="publid">Details</h1>

<div>
    <h4>Mặt hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class="col-sm-2">
            Giá Góc
        </dt>
        <dd class="col-sm-10">
            @Model.GiaGoc.ToString("n0")đ
        </dd>
        <dt class="col-sm-2">
            Giá Bán
        </dt>
        <dd class="col-sm-10">
            @Model.GiaBan.ToString("n0")đ
        </dd>
        <dt class="col-sm-2">
            Số Lượng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        <dt class="col-sm-2">
            Mô Tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class="col-sm-2">
            Hình Ảnh
        </dt>
        <dd class="col-sm-10">
            <img src="~/Template/Picture/@Html.DisplayFor(model => model.HinhAnh)" width="400" />
        </dd>
        <dt class="col-sm-2">
            Hình 1
        </dt>
        <dd class="col-sm-10">
            <img src="~/Template/Picture/@Html.DisplayFor(model => model.Hinh1)" width="400" />
        </dd>
        <dt class="col-sm-2">
            Hình 2
        </dt>
        <dd class="col-sm-10">
            <img src="~/Template/Picture/@Html.DisplayFor(model => model.Hinh2)" width="400" />
        </dd>
        <dt class="col-sm-2">
            Hình 3
        </dt>
        <dd class="col-sm-10">
            <img src="~/Template/Picture/@Html.DisplayFor(model => model.Hinh3)" width="400" />
        </dd>
        <dt class="col-sm-2">
            Lượt Xem
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LuotXem)
        </dd>
        <dt class="col-sm-2">
            Lượt Mua
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LuotMua)
        </dd>
        <dt class="col-sm-2">
            Mã Danh Mục
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaDmNavigation.Ten)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.MaMh">Sửa</a>
    <a asp-action="Index">Quay lại danh sách</a>
</div>
