@model IEnumerable<MayinOnline.Models.Cthoadon>

@{
    ViewData["Title"] = "Details Hóa đơn Admin";
}

<h1>Details</h1>

<div>
    <h4>Hóa đơn</h4>
    <hr />
    <dl class="row">
        @foreach (Cthoadon ct in Model)
        {
            <dt class="col-sm-2">
                Mã hóa đơn
            </dt>
            <dd class="col-sm-10">
                @ct.MaHd
            </dd>
            <dt class="col-sm-2">
                Mã mặt hàng
            </dt>
            <dd class="col-sm-10">
                @ct.MaMh
            </dd>
            <dt class="col-sm-2">
                Tên
            </dt>
            <dd class="col-sm-10">
                @ct.MaMhNavigation.Ten
            </dd>
            <dt class="col-sm-2">
                Hình ảnh
            </dt>
            <dd class="col-sm-10">
                <img src="~/Template/Picture/@ct.MaMhNavigation.HinhAnh" width="200" />
            </dd>
            <dt class="col-sm-2">
                Số lượng
            </dt>
            <dd class="col-sm-10">
                @ct.SoLuong
            </dd>
            <dt class="col-sm-2">
                Giá
            </dt>
            <dd class="col-sm-10">
                @string.Format("{0:n0}đ", ct.DonGia)
            </dd>
            <dt class="col-sm-2">
                Thành tiền
            </dt>
            <dd class="col-sm-10">
                @ct.ThanhTien.ToString("n0")đ
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>
